{
  "name": "snackoverflow",
  "version": "0.0.1",
  "description": "A website for people with specialized diets to share recipes",
  "main": "server.js",
  "scripts": {
    "test": "mocha tests/**/*.js",
    "start": "node server.js",
    "test-watch": "mocha tests/**/*.js -w",
    "dropdb": "dropdb snackoverflow",
    "createdb": "createdb snackoverflow",
    "schema": "psql -d snackoverflow -f db/schema.sql",
    "seeddb": "psql -d snackoverflow -f db/seeds.sql",
    "resetdb": "npm run dropdb && npm run createdb && npm run schema && npm run seeddb"
  },
  "jshintConfig": {
    "node": true,
    "esversion": 6
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/harryganz/snackoverflow.git"
  },
  "author": "Harry Ganz <hganz@harryganz.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/harryganz/snackoverflow/issues"
  },
  "homepage": "https://github.com/harryganz/snackoverflow#readme",
  "dependencies": {
    "body-parser": "^1.15.0",
    "ejs": "^2.4.1",
    "express": "^4.13.4",
    "morgan": "^1.7.0",
    "pg-promise": "^3.2.3"
  },
  "devDependencies": {
    "dotenv": "^2.0.0",
    "mocha": "^2.4.5",
    "supertest": "^1.2.0"
  }
}
